<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/colorSmoke"
              android:fitsSystemWindows="true"
              tools:context=".ActivityMain">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:fitsSystemWindows="true"
            android:padding="2dp"
            app:titleMarginStart="20dp"
            app:titleTextColor="@color/colorIcon">

        <TextView
                android:id="@+id/tvDiagnose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:text="Diagnose Patients"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>

    <TextView
            android:id="@+id/tx_not_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:text="Device is not connected"
            android:background="@color/colorRed"
            android:textColor="@android:color/white"/>
    <View
            android:id="@+id/view_fill"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1"/>
    <TextView
            android:id="@+id/tx_reconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:text="Tap here to reconnect device"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="87dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                <Spinner
                        android:id="@+id/spinner_patient"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_edittext"/>

                <android.support.v7.widget.CardView
                        android:id="@+id/cv_patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="8dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/tx_patient"
                                style="@style/textTitle"
                                android:text="Patient"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:gravity="center_horizontal"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"/>

                        <ImageView
                                android:id="@+id/iv_reset"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_replay"
                                android:tint="@color/colorPrimary"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tx_patient"/>

                        <View
                                android:id="@+id/v_line1"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@id/tx_patient"
                                app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                                android:id="@+id/tv_patient_name"
                                style="@style/textStandard"
                                android:text="Raihan Hamid Suraperwata"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintTop_toBottomOf="@id/tx_patient"
                                app:layout_constraintStart_toStartOf="parent"/>


                        <TextView
                                android:id="@+id/tv_patient_age"
                                style="@style/textStandard"
                                android:text="21 years old"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@id/tv_patient_name"
                                app:layout_constraintStart_toStartOf="@id/tv_patient_name"/>

                        <TextView
                                android:id="@+id/tv_patient_gender"
                                style="@style/textStandard"
                                android:text="Male"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintTop_toBottomOf="@id/tv_patient_age"
                                app:layout_constraintStart_toStartOf="@id/tv_patient_name"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/cv_graph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="-10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.jjoe64.graphview.GraphView
                                android:id="@+id/graph_bpm"
                                android:layout_width="match_parent"
                                android:layout_height="200dip"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:background="@color/colorIcon"
                                app:seriesType="line"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/cv_timer"
                        android:elevation="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="-10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <ImageView
                                android:id="@+id/iv_heartbeat"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="8dp"
                                android:src="@mipmap/ic_heartbeat"
                                android:tint="@color/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                                android:id="@+id/iv_pause_play"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_pause"
                                android:tint="@color/colorPrimary"
                                android:layout_marginEnd="4dp"
                                app:layout_constraintEnd_toStartOf="@id/iv_restart"
                                app:layout_constraintTop_toTopOf="@id/tx_heartbeat"/>

                        <ImageView
                                android:id="@+id/iv_restart"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_replay"
                                android:tint="@color/colorPrimary"
                                app:layout_constraintEnd_toEndOf="@id/tv_timer_milisecond"
                                app:layout_constraintTop_toTopOf="@id/tx_heartbeat"/>

                        <TextView
                                android:id="@+id/tx_heartbeat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Heartsound"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@id/iv_heartbeat"
                                app:layout_constraintTop_toTopOf="@id/iv_heartbeat"/>

                        <TextView
                                android:id="@+id/tv_timer_minute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="00"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toStartOf="@id/tv_timer_mid"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                                android:id="@+id/tv_timer_mid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toStartOf="@id/tv_timer_second"
                                app:layout_constraintTop_toTopOf="@+id/tv_timer_minute"/>

                        <TextView
                                android:id="@+id/tv_timer_second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toStartOf="@id/tv_timer_mid2"
                                app:layout_constraintTop_toTopOf="@+id/tv_timer_minute"/>

                        <TextView
                                android:id="@+id/tv_timer_mid2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toStartOf="@id/tv_timer_milisecond"
                                app:layout_constraintTop_toTopOf="@+id/tv_timer_minute"/>

                        <TextView
                                android:id="@+id/tv_timer_milisecond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/tv_timer_minute"
                        />

                        <TextView
                                android:id="@+id/tv_bpm"
                                style="@style/textStandard"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="0"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_heartbeat"/>

                        <TextView
                                android:id="@+id/tx_bpm"
                                style="@style/textStandard"
                                android:gravity="center"
                                android:text="db"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="12sp"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="@id/tv_bpm"
                                app:layout_constraintStart_toEndOf="@id/tv_bpm"/>

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                        android:id="@+id/cv_result"
                        android:elevation="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="-10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/colorIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <ImageView
                                android:id="@+id/iv_result"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:src="@drawable/ic_info"
                                android:tint="@color/colorPrimary"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                                android:id="@+id/tx_result"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="2dp"
                                android:text="Result"
                                android:textColor="@color/colorSecondaryText"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@id/iv_result"
                                app:layout_constraintTop_toTopOf="@id/iv_result"/>

                        <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_result"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginEnd="16dp"
                                android:maxHeight="80dp"
                                app:layout_constraintStart_toStartOf="@id/iv_result"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_result"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <Button
                        android:id="@+id/btn_subs"
                        android:background="@drawable/bg_btn"
                        android:text="Start Diagnose"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"/>

                <View
                        android:id="@+id/view_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"/>

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>